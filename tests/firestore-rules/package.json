{
  "name": "firestore-rules-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Firestore security rules tests for NoWastedMed",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:emulator": "firebase emulators:exec --only firestore \"npm test\"",
    "emulator:start": "firebase emulators:start --only firestore"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.0",
    "@types/jest": "^29.5.0",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^14.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
