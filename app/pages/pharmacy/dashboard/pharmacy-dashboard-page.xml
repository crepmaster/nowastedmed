<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="bg-gray-100">
    <ActionBar title="Pharmacy Dashboard" class="bg-blue-500 text-white">
        <ActionItem ios.position="right" android.position="actionBar" tap="{{ onLogout }}">
            <Label text="Logout" class="text-white p-2" />
        </ActionItem>
    </ActionBar>

    <GridLayout rows="auto, *">
        <!-- Stats Overview -->
        <GridLayout row="0" columns="*, *, *" class="p-4">
            <StackLayout col="0" class="bg-white p-4 m-1 rounded-lg shadow">
                <Label text="Available" class="text-gray-600" />
                <Label text="{{ stats.available }}" class="text-2xl text-center text-blue-500" />
            </StackLayout>
            <StackLayout col="1" class="bg-white p-4 m-1 rounded-lg shadow">
                <Label text="Pending" class="text-gray-600" />
                <Label text="{{ stats.pending }}" class="text-2xl text-center text-orange-500" />
            </StackLayout>
            <StackLayout col="2" class="bg-white p-4 m-1 rounded-lg shadow">
                <Label text="Exchanged" class="text-gray-600" />
                <Label text="{{ stats.exchanged }}" class="text-2xl text-center text-green-500" />
            </StackLayout>
        </GridLayout>

        <TabView row="1" selectedIndex="{{ selectedTabIndex }}" class="bg-white">
            <!-- My Medicines Tab -->
            <TabViewItem title="My Medicines">
                <GridLayout rows="auto, *">
                    <Button text="Add Medicine" tap="{{ onAddMedicine }}" class="bg-blue-500 text-white m-2 rounded" />
                    <ListView row="1" items="{{ medicines }}" class="list-group">
                        <ListView.itemTemplate>
                            <GridLayout columns="*, auto" class="p-4 bg-white border-b border-gray-200">
                                <StackLayout col="0">
                                    <Label text="{{ name }}" class="text-lg font-bold" />
                                    <Label text="{{ 'Total Quantity: ' + quantity }}" class="text-sm text-gray-600" />
                                    <Label text="{{ exchangeQuantity ? 'Available for Exchange: ' + exchangeQuantity : '' }}" 
                                           class="text-sm text-blue-600"
                                           visibility="{{ exchangeQuantity > 0 ? 'visible' : 'collapsed' }}" />
                                    <Label text="{{ 'Expires: ' + expiryDate }}" class="text-sm text-gray-600" />
                                </StackLayout>
                                <Button col="1" text="Make Available" 
                                        tap="{{ $parents['ListView'].onMakeAvailable }}"
                                        visibility="{{ status === 'available' ? 'visible' : 'collapsed' }}"
                                        class="bg-green-500 text-white p-2 rounded" />
                            </GridLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </GridLayout>
            </TabViewItem>

            <!-- Exchange Hub Tab -->
            <TabViewItem title="Exchange Hub">
                <GridLayout rows="auto, *">
                    <SegmentedBar selectedIndex="{{ exchangeViewIndex }}" class="m-2">
                        <SegmentedBar.items>
                            <SegmentedBarItem title="My Offers" />
                            <SegmentedBarItem title="My Proposals" />
                        </SegmentedBar.items>
                    </SegmentedBar>
                    
                    <ListView row="1" items="{{ currentExchangeView }}" class="list-group">
                        <ListView.itemTemplate>
                            <GridLayout columns="*, auto" class="p-4 bg-white border-b border-gray-200">
                                <StackLayout col="0">
                                    <Label text="{{ proposedMedicines[0].medicine.name }}" class="text-lg font-bold" />
                                    <Label text="{{ 'Quantity: ' + proposedMedicines[0].quantity }}" class="text-sm text-gray-600" />
                                    <Label text="{{ 'Status: ' + status }}" class="text-sm" 
                                           color="{{ status === 'pending' ? '#f97316' : '#22c55e' }}" />
                                </StackLayout>
                                <Button col="1" text="{{ actionButtonText }}" 
                                        tap="{{ $parents['ListView'].onExchangeAction }}"
                                        class="{{ actionButtonClass }}" />
                            </GridLayout>
                        </ListView.itemTemplate>
                    </ListView>
                </GridLayout>
            </TabViewItem>

            <!-- Available Exchanges Tab -->
            <TabViewItem title="Available Exchanges">
                <ListView items="{{ availableExchanges }}" class="list-group">
                    <ListView.itemTemplate>
                        <GridLayout columns="*, auto" class="p-4 bg-white border-b border-gray-200">
                            <StackLayout col="0">
                                <Label text="{{ name }}" class="text-lg font-bold" />
                                <Label text="{{ 'From: ' + pharmacyName }}" class="text-sm text-gray-600" />
                                <Label text="{{ 'Quantity: ' + exchangeQuantity }}" class="text-sm text-gray-600" />
                                <Label text="{{ 'Expires: ' + expiryDate }}" class="text-sm text-gray-600" />
                            </StackLayout>
                            <Button col="1" text="Create Proposal" 
                                    tap="{{ $parents['ListView'].onCreateProposal }}"
                                    class="bg-blue-500 text-white p-2 rounded" />
                        </GridLayout>
                    </ListView.itemTemplate>
                </ListView>
            </TabViewItem>
        </TabView>
    </GridLayout>
</Page>